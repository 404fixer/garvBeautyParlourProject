<div class="container appointment">
    <h1 id="heading" class="display-1">Get</h1>
    <hr />
    <form action="">
        <div class="form-row">
            <div class="form-group col-md-6">
                <label for="inputPassword4">Name</label>
                <input type="text" class="form-control app-name" id="inputPassword4">
            </div>
            <div class="form-group col-md-6">
                <label for="inputEmail4">Email</label>
                <input type="email" class="form-control app-email" id="inputEmail4">
            </div>
        </div>
        <div class="form-group">
            <label for="inputAddress">Address</label>
            <input type="text" class="form-control app-address" id="inputAddress" placeholder="1234 Main St">
        </div>
        <div class="form-group">
            <label for="inputAddress2">what you want</label>
            <input type="text" class="form-control app-whatyouwant" id="inputAddress2" placeholder="facial,spa,haircut,etc">
        </div>
        <div class="form-row">
            <div class="form-group col-md-4">
                <label for="inputCity">Mobile Number</label>
                <input type="text" class="form-control app-mobile" id="inputCity">
            </div>
            <div class="form-group col-md-4">
                <label for="inputState">choose branch</label>
                <select id="inputState" class="form-control app-branch">
                    <option selected>Branch 1(kishan pura)</option>
                    <option>Branch 2(kanha plaza)</option>
                    <option>Branch 3(Abulane)</option>
                </select>
            </div>
            <div class="form-group col-md-4">
                <label for="inputZip">chose date</label>
                <input type="date" class="form-control app-date" id="inputZip">
            </div>
        </div>
        <div class="form-group">
            <div class="form-check">
                <input class="form-check-input" type="checkbox" id="gridCheck">
                <label class="form-check-label" for="gridCheck">
                    Check me out
                </label>
            </div>
        </div>
        <div class="submitbtn">
            <button type="submit" class="btn btn-primary submit-btn">Submit</button>
        </div>
    </form>
    <hr />
</div>