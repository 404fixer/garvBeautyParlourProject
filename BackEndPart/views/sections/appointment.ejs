<div class="container appointment">
    <hr />
    <h1 id="heading" class="display-1">Get</h1>
    <hr />
    <% if (message) { %>
    <div style="text-align: center" class="alert alert-<%= message.type %>">
      <button type="button" class="close" data-dismiss="alert">&times;</button>
      <strong><%= message.intro %></strong> <%= message.message %>
    </div>

    <% } %>
    <form action="send" method="POST">
        <div class="form-row">
            <div class="form-group col-md-6">
                <label for="inputPassword4">Name</label>
                <input type="text" class="form-control" id="name" name="name">
            </div>
            <div class="form-group col-md-6">
                <label for="inputEmail4">Email</label>
                <input type="email" class="form-control" id="email" name="email">
            </div>
        </div>
        <div class="form-group">
            <label for="inputAddress">Address</label>
            <input type="text" class="form-control" id="address" placeholder="1234 Main St" name="address">
        </div>
        <div class="form-group">
            <label for="inputAddress2">what you want</label>
            <input type="text" class="form-control" id="enquiry"
                placeholder="facial,spa,haircut,etc" name="enquiry">
            <input type="text" class="form-control app-whatyouwant" id="inputAddress2" placeholder="facial,spa,haircut,etc">
        </div>
        <div class="form-row">
            <div class="form-group col-md-4">
                <label for="inputCity">Mobile Number</label>
                <input type="text" class="form-control" id="mobile" name="mobile">
            </div>
            <div class="form-group col-md-4">
                <label for="inputState">choose branch</label>
                <select id="branch" class="form-control" name="branch">
                    <option selected>Branch 1(kishan pura)</option>
                    <option>Branch 2(kanha plaza)</option>
                    <option>Branch 3(Abulane)</option>
                </select>
            </div>
            <div class="form-group col-md-4">
                <label for="inputZip">chose date</label>
                <input type="date" class="form-control" id="date" name="date">
            </div>
        </div>
        <div class="submitbtn">
            <button type="submit" class="btn btn-primary" id="submit-btn">Submit</button>
        </div>
    </form>
    <hr />
</div>