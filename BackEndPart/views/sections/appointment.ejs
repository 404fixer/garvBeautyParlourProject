<div class="container appointment " id="appointment-id">
    <h1 id="heading" class="display-1">Get Appointment</h1>
    <hr />
    <% if (message) { %>
        <div style="text-align: center" class="alert alert-<%= message.type %>">
            <button type="button" class="close" data-dismiss="alert">&times;</button>
            <strong><%= message.intro %></strong>
            <%= message.message %>
        </div>

        <% } %>
            <form id="contactForm1" action="send" method="POST">
                <div class="form-row">
                    <div class="form-group col-md-6">
                        <label for="inputPassword4">Name</label>
                        <input type="text" class="form-control" id="name" name="name" placeholder="Name">
                    </div>
                    <div class="form-group col-md-6">
                        <label for="inputEmail4">Email</label>
                        <input type="email" class="form-control" id="email" name="email" placeholder="Email">
                    </div>
                </div>
                <div class="form-group">
                    <label for="inputAddress">Address</label>
                    <input type="text" class="form-control" id="address" placeholder="Your Address" name="address">
                </div>
                <div class="form-group">
                    <label for="inputAddress2">Services You Want </label>
                    <input type="text" class="form-control" id="enquiry" placeholder="eg, Facial, Hair Cut, Spa, etc." name="enquiry">
                </div>
                <div class="form-row">
                    <div class="form-group col-md-4">
                        <label for="inputCity">Mobile Number</label>
                        <input type="text" class="form-control" id="mobile" name="mobile" placeholder="Your Mobile Number">
                    </div>
                    <div class="form-group col-md-4">
                        <label for="inputState">Choose Branch</label>
                        <select id="branch" class="form-control" name="branch">
                    <option selected>Branch 1 (Kishan Pura)</option>
                    <option>Branch 2 (Kanha Plaza)</option>
                    <option>Branch 3 (Abulane)</option>
                </select>

                    </div>
                    <div class="form-group col-md-4">
                        <label for="inputZip">Choose Date</label>
                        <input type="date" class="form-control" id="date" name="date">
                    </div>
                </div>

                <div class="submitBtn">
                    <button type="submit" class="btn btn-primary" id="submit-btn">Submit</button>
                </div>
            </form>
</div>